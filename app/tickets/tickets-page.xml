<Page
    class="page"
    navigatingTo="onNavigatingTo"  
    xmlns="http://schemas.nativescript.org/tns.xsd"
    xmlns:lv="nativescript-ui-listview"
    >

    <ActionBar class="action-bar">
        <!-- 
        Use the NavigationButton as a side-drawer button in Android
        because ActionItems are shown on the right side of the ActionBar
        -->
        <NavigationButton ios:visibility="collapsed" icon="res://menu" tap="onDrawerButtonTap"></NavigationButton>
        <!-- 
        Use the ActionItem for IOS with position set to left. Using the
        NavigationButton as a side-drawer button in iOS is not possible,
        because its function is to always navigate back in the application.
        -->
        <ActionItem icon="res://navigation/menu" 
            android:visibility="collapsed" 
            tap="onDrawerButtonTap"
            ios.position="left">
        </ActionItem>
        <Label class="action-bar-title" text="Tickets" textWrap="true"></Label>
    </ActionBar>

 <GridLayout class="page-content">
<!--    <ScrollView> -->
      <StackLayout width="100%" height="100%" backgroundColor="white">
        
        <!-- loadOnDemandMode="Auto" loadMoreDataRequested="loadMoreItems" for lazy loading -->
        <lv:RadListView items="{{tickets}}" class="listItem"> 

          <lv:RadListView.listViewLayout>
            <lv:ListViewGridLayout scrollDirection="Vertical"/>
          </lv:RadListView.listViewLayout>

		
		      <lv:RadListView.headerItemTemplate>
			      <GridLayout rows="auto" columns="*,*" visibility="{{ hasTickets ? 'visible' : 'collapsed' }}">
      	      <Button row="0" col="0" colSpan="2" text="&#xf067; Add ticket" class="fa btn btn-primary" route="ticketsAdd/ticketsAdd-page" tap="pageJump" />
            </GridLayout>
			      <GridLayout rows="auto,auto" columns="*" visibility="{{ hasTickets ? 'collapsed' : 'visible' }}">
      	       <Label row="0" col="0" rowSpan="0" text="No tickets, why not" textWrap="true" horizontalAlignment="center" verticalAlignment="center" />
      	      <Button row="0" col="0" colSpan="2" text="&#xf067; Add a ticket" class="fa btn btn-primary" route="ticketsAdd/ticketsAdd-page" tap="pageJump" />
            </GridLayout>
		      </lv:RadListView.headerItemTemplate>
		
          <lv:RadListView.itemTemplate>
            <GridLayout class="itemStyle" rows="auto,auto,auto" columns="auto,auto">
              <Label row="0" col="0" rowSpan="0" colSpan="1" text="{{attraction}}" textWrap="true" />
              <Label row="0" col="1" rowSpan="0" colSpan="1" text="{{orderDate}}" textWrap="true" />
              <Label row="1" col="0" rowSpan="0" colSpan="1" text="{{orderIdHuman}}" textWrap="true" />
              <Button row="2" col="0" colSpan="2" text="&#xf3ff; Open tickets" class="fa btn btn-primary" fid="{{fid}}" tap="viewTickets" />
            </GridLayout>
          </lv:RadListView.itemTemplate>

          <lv:RadListView.groupTemplate>
            <GridLayout ios:height="50">
              <Label text="{{grouping}}" class="groupLabel" />
            </GridLayout>
          </lv:RadListView.groupTemplate>
          
        </lv:RadListView>



		  </StackLayout>
<!--    </ScrollView> -->
   </GridLayout>


</Page>
